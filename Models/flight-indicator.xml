<?xml version="1.0"?>



<PropertyList>
	<path>flight-indicator.ac</path>

	<animation> 
		<type>select</type>
		<object-name>flap-up</object-name>
		<condition>
		<equals>
			<property>surface-positions/flap-pos-norm</property>
			<value>0</value>
		</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>flap-TO</object-name>
		<condition>
		<equals>
			<property>surface-positions/flap-pos-norm</property>
			<value>0.75</value>
		</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>flap-LD</object-name>
		<condition>
		<equals>
			<property>surface-positions/flap-pos-norm</property>
			<value>1</value>
		</equals>
		</condition>
	</animation>

	<animation> 
		<type>select</type>
		<object-name>slat-up</object-name>
		<condition>
			<equals>
				<property>surface-positions/flap-pos-norm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>slat-down</object-name>
		<condition>
			<greater-than-equals>
				<property>surface-positions/flap-pos-norm</property>
				<value>0.75</value>
			</greater-than-equals>
		</condition>
	</animation>

	<animation> 
		<type>select</type>
		<object-name>brake-in</object-name>
		<condition>
			<equals>
				<property>surface-positions/spoiler-pos-norm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>brake-up</object-name>
		<condition>
			<equals>
				<property>surface-positions/spoiler-pos-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>


	<animation> 
		<type>select</type>
		<object-name>NW-up</object-name>
		<condition>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>NW-down</object-name>
		<condition>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation> 
		<type>select</type>
		<object-name>LW-up</object-name>
		<condition>
			<equals>
				<property>gear/gear[1]/position-norm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>LW-down</object-name>
		<condition>
			<equals>
				<property>gear/gear[1]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation> 
		<type>select</type>
		<object-name>RW-up</object-name>
		<condition>
			<equals>
				<property>gear/gear[2]/position-norm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	<animation> 
		<type>select</type>
		<object-name>RW-down</object-name>
		<condition>
			<equals>
				<property>gear/gear[2]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>



<!-- lighting -->

	<animation> 
