<?xml version="1.0"?>

	<PropertyList>

	<path>elev-trim.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>controls/flight/elevator-trim</property>
		<factor>120</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>


	<!-- lighting -->

	<animation> 
		<object-name>face</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.18</blue>
		</emission>
	</animation>
	<animation> 
		<object-name>needle</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.75</red>
			<green>0.55</green>
			<blue>0.35</blue>
		</emission>
	</animation>

	<animation>
		<object-name>elev-trim</object-name>
		<type>noshadow</type>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>

</PropertyList>
