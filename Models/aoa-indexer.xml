<?xml version="1.0"?>

<PropertyList>

	<path>aoa-indexer.ac</path>

	<animation>
		<type>select</type>
		<object-name>aoa-too-slow</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<greater-than>
				<property>orientation/alpha-deg</property>
			<property>sim/aoa-indexer/too-slow-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-slow</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/too-slow-deg</property>
			</less-than>
			<greater-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/slow-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-on-speed</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/slow-deg</property>
			</less-than>
			<greater-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/fast-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-fast</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/fast-deg</property>
			</less-than>
			<greater-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/too-fast-deg</property>
			</greater-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>aoa-too-fast</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<less-than>
				<property>orientation/alpha-deg</property>
				<property>sim/aoa-indexer/too-fast-deg</property>
			</less-than>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>



	<animation>
		<type>select</type>
		<object-name>wheels-lt</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
			<or>
				<less-than>
					<property>gear/gear[0]/position-norm</property>
					<value>1</value>
				</less-than>
				<less-than>
					<property>gear/gear[1]/position-norm</property>
					<value>1</value>
				</less-than>
				<less-than>
					<property>gear/gear[2]/position-norm</property>
					<value>1</value>
				</less-than>
			</or>
			<greater-than>
				<property>surface-positions/flap-pos-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>controls/engines/engine[0]/throttle</property>
				<value>0.58</value>
			</less-than>
			<property>sim/model/A-6E/lighting/warn-medium-lights-switch/state</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>apc-stby-lt</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
				<property>sim/model/A-6E/instrumentation/APC/apc-stby-lt</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>afcs-out-lt</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
				<property>sim/model/A-6E/instrumentation/AFCS/afcs-out-lt</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>wave-off-lt</object-name>
		<condition>
			<!--<greater-than>
				<property>systems/electrical/outputs/aoa-indexer</property>
				<value>23</value>
			</greater-than>-->
				<property>sim/model/A-6E/instrumentation/ACLS/wave-off-lt</property>
		</condition>
	</animation>

	<!-- lighting -->
	<animation>
		<object-name>aoa-too-slow</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/A-6E/controls/lighting/index-norm</factor-prop>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>aoa-slow</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/A-6E/controls/lighting/index-norm</factor-prop>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>aoa-on-speed</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/A-6E/controls/lighting/index-norm</factor-prop>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>aoa-fast</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/A-6E/controls/lighting/index-norm</factor-prop>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>aoa-too-fast</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/A-6E/controls/lighting/index-norm</factor-prop>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>

	<animation>
		<object-name>wheels-lt</object-name>
		<type>material</type>
		<emission> 
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>apc-stby-lt</object-name>
		<type>material</type>
		<emission> 
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>afcs-out-lt</object-name>
		<type>material</type>
		<emission> 
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>
	<animation>
		<object-name>wave-off-lt</object-name>
		<type>material</type>
		<emission> 
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
		</emission>
	</animation>

	<animation>
		<object-name>aoa-indexer</object-name>
		<type>noshadow</type>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>


</PropertyList>
