<?xml version="1.0"?>


<PropertyList>

  <path>accelerometer.ac</path>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>accelerations/pilot-g</property>
    <interpolation>
      <entry><ind>-5</ind><dep>-202.5</dep></entry>
      <entry><ind>-4</ind><dep>-112.5</dep></entry>
      <entry><ind>-3</ind><dep>-90</dep></entry>
      <entry><ind>-1</ind><dep>-45</dep></entry>
      <entry><ind>0</ind><dep>-22.5</dep></entry>
      <entry><ind>1</ind><dep>0</dep></entry>
      <entry><ind>3</ind><dep>45</dep></entry>
      <entry><ind>5</ind><dep>90</dep></entry>
      <entry><ind>7</ind><dep>135</dep></entry>
      <entry><ind>9</ind><dep>180</dep></entry>
      <entry><ind>10</ind><dep>202.5</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center> 
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>needle-max</object-name>
    <property>sim/model/A-6E/instrumentation/g-meter/g-max</property>
    <interpolation>
      <entry><ind>-5</ind><dep>-202.5</dep></entry>
      <entry><ind>-4</ind><dep>-112.5</dep></entry>
      <entry><ind>-3</ind><dep>-90</dep></entry>
      <entry><ind>-1</ind><dep>-45</dep></entry>
      <entry><ind>0</ind><dep>-22.5</dep></entry>
      <entry><ind>1</ind><dep>0</dep></entry>
      <entry><ind>3</ind><dep>45</dep></entry>
      <entry><ind>5</ind><dep>90</dep></entry>
      <entry><ind>7</ind><dep>135</dep></entry>
      <entry><ind>9</ind><dep>180</dep></entry>
      <entry><ind>10</ind><dep>202.5</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center> 
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>needle-min</object-name>
    <property>sim/model/A-6E/instrumentation/g-meter/g-min</property>
    <interpolation>
      <entry><ind>-5</ind><dep>-202.5</dep></entry>
      <entry><ind>-4</ind><dep>-112.5</dep></entry>
      <entry><ind>-3</ind><dep>-90</dep></entry>
      <entry><ind>-1</ind><dep>-45</dep></entry>
      <entry><ind>0</ind><dep>-22.5</dep></entry>
      <entry><ind>1</ind><dep>0</dep></entry>
      <entry><ind>3</ind><dep>45</dep></entry>
      <entry><ind>5</ind><dep>90</dep></entry>
      <entry><ind>7</ind><dep>135</dep></entry>
      <entry><ind>9</ind><dep>180</dep></entry>
      <entry><ind>10</ind><dep>202.5</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center> 
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <object-name>accel</object-name> 
    <type>material</type>
    <condition><not><property>sim/rendering/rembrandt/enabled</property></not></condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>0.55</red>
      <green>0.24</green>
      <blue>0.10</blue>
    </emission>
  </animation>

  <animation>
      <type>pick</type>
      <object-name>button</object-name>
      <action> 
	  <name>Reset Accelerometer</name>
	  <button>0</button>
	  <x>-180</x>
	  <y>80</y>
	  <w>55</w>
	  <h>150</h>
	  <binding> 
	      <command>property-assign</command>
	      <property>sim/model/A-6E/instrumentation/g-meter/g-max</property>
	      <value>1</value>
	  </binding>
	  <binding> 
	      <command>property-assign</command>
	      <property>sim/model/A-6E/instrumentation/g-meter/g-min</property>
	      <value>1</value>
	  </binding>
      </action>
  </animation>
  
  <!-- *** LoD *** -->
  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>15</max-m>
  </animation>

</PropertyList>
