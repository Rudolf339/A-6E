<?xml version="1.0"?>
<PropertyList>

  <path>ai.ac</path>

  <animation>
    <type>select</type>
    <object-name>off-flag</object-name>
    <condition>
      <less-than>
        <property>systems/electrical/outputs/adi</property>
        <value>24</value>
      </less-than>
    </condition>
  </animation>


  <animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m>-0.0395</x-m>
      <y-m>0</y-m>
      <z-m>0.0007</z-m>
    </center>
    <axis><x>1</x></axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <property>orientation/pitch-deg</property>
    <center>
      <x-m>-0.0395</x-m>
      <y-m>0</y-m>
      <z-m>0.0007</z-m>
    </center>
    <axis><y>1</y></axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>bank-index</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m>-0.0015</x-m>
      <y-m>0</y-m>
      <z-m>0.0007</z-m>
    </center>
    <axis><x>-1</x></axis>
  </animation>

  <!-- Turn indicator -->
  <animation>
    <type>translate</type>
    <object-name>turn-indicator</object-name>
    <property>instrumentation/turn-indicator/indicated-turn-rate</property>
    <!--  midle: ~ 1,3 G turn, full 2 G turn at mach 0.8 ??? -->
    <factor>0.0073</factor>
    <min>-0.0111</min>
    <max>0.0111</max>
    <axis><y>1</y></axis>
  </animation>


  <!-- slip-ball-->
  <animation>
    <type>rotate</type>
    <object-name>slip-ball</object-name>
    <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <factor>2</factor>
    <min-deg>-2</min-deg>
    <max-deg>2</max-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.18</z-m>
    </center>
    <axis><x>-1</x></axis>
  </animation>

  <!-- lighting -->

  <animation>
    <object-name>ai</object-name>
    <type>material</type>
    <condition><not><property>sim/rendering/rembrandt/enabled</property></not></condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>0.55</red>
      <green>0.24</green>
      <blue>0.10</blue>
    </emission>
  </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>15</max-m>
  </animation>

</PropertyList>
