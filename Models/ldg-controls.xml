<?xml version="1.0"?>

<PropertyList>

	<path>ldg-controls.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>handle</object-name>
		<property>sim/model/A-6E/controls/gear/ld-gear-handle-anim</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-36</dep></entry>
			<entry><ind>-0.5</ind><dep>0</dep></entry>
			<entry><ind>0</ind><dep>36</dep></entry> 
		</interpolation>  
		<center>
			<x-m>-0.0221</x-m>
			<y-m>0</y-m>
			<z-m>-0.0050</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>sim/model/A-6E/controls/gear/ld-gear-handle-anim</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-30</dep></entry>
			<entry><ind>-0.60</ind><dep>30</dep></entry>
			<entry><ind>0</ind><dep>30</dep></entry> 
		</interpolation>  
		<center>
			<x-m>-0.0019</x-m>
			<y-m>0</y-m>
			<z-m>-0.0474</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>lamp-on</object-name>
		<condition>
			<greater-than>
				<property>gear/gear[0]/position-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</less-than>
			<greater-than>
				<property>gear/gear[1]/position-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>gear/gear[1]/position-norm</property>
				<value>1</value>
			</less-than>
			<greater-than>
				<property>gear/gear[2]/position-norm</property>
				<value>0</value>
			</greater-than>
			<less-than>
				<property>gear/gear[2]/position-norm</property>
				<value>1</value>
			</less-than>
			<property>sim/model/A-6E/lighting/warn-fast-lights-switch/state</property>
		</condition>  
	</animation>



	<!-- lighting -->

	<animation> 
		<object-name>mount</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.45</red>
			<green>0.34</green>
			<blue>0.18</blue>
		</emission>
	</animation>

	<animation> 
		<object-name>handle</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.45</red>
			<green>0.34</green>
			<blue>0.18</blue>
		</emission>
	</animation>

	<animation>
		<object-name>switch</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.45</red>
			<green>0.34</green>
			<blue>0.18</blue>
		</emission>
	</animation>

	<animation> 
		<object-name>lamp-on</object-name>
		<type>material</type>
		<emission> 
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>ldg-controls</object-name>
		<type>noshadow</type>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>

</PropertyList>
