<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">


<PropertyList> 
	<name>Pilot-Panel-Right</name>
	<background>Aircraft/A-6E/Models/transparent-bg.png</background>
	<w>1024</w>
	<h>768</h>
	<y-offset>0</y-offset>

	<instruments> 
		<instrument> 
			<name>Pilot-Panel-Right</name>
        	<w>1024</w>
        	<h>768</h>
        	<w-base>1024</w-base>
        	<h-base>1024</h-base>
        	<x>512</x>
			<y>384</y>  
			<layers> 
				<layer> 
					<name>background</name>
					<texture> 
						<path>Aircraft/A-6E/Models/transparent-bg.png</path>
						<!--<path>Aircraft/A-6E/Models/hotspotgrid.png</path>-->
						<x1>0.0</x1>
						<y1>0.0</y1>
						<x2>1.0</x2>
						<y2>1.0</y2>
					</texture>
				</layer>
			</layers>
			<actions> 



				<!-- ######### Accelerometer Reset ######### -->

				<action> 
					<name>Reset Accelerometer</name>
					<button>0</button>
					<x>-180</x>
					<y>80</y>
					<w>55</w>
					<h>150</h>
					<binding> 
						<command>property-assign</command>
						<property>sim/model/A-6E/instrumentation/g-meter/g-max</property>
						<value>1</value>
					</binding>
					<binding> 
						<command>property-assign</command>
						<property>sim/model/A-6E/instrumentation/g-meter/g-min</property>
						<value>1</value>
					</binding>
				</action>


			</actions> 

		</instrument>
	</instruments>
</PropertyList>
